@page
@model BonosCarrosWeb.Pages.Designers.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Designer[0].Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Designer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DesignerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DesignerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DesignerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
